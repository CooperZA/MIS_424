<div>
    <div class="text-center">
        <h2>Screen Scraping</h2><hr />
    </div>
    <form class="form-horizontal myForm">
        <div class="form-group">
            <label>URL:</label>
            <input type="text" class="form-control" name="targetUrl"
                   value="@ViewBag.targetUrl">
        </div>
        <div class="form-group">
            <label>Pattern:</label>
            <input type="text" class="form-control" name="regExPattern"
                   value="@ViewBag.pattern">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="viewHtml" checked="@ViewBag.viewHtml">Display HTML
            </label>
            <br /><br />
            <input type="submit" value="Scrape" />
            <a href="index">Reload page</a>
            <hr />
        </div>
    </form>
    <p><b>@ViewBag.count</b></p>
    <div id="divOutput" style="background-color: white;">
        @Html.Raw(@ViewBag.results)
    </div>
</div>
